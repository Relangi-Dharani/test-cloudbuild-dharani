#include <bits/stdc++.h>
using namespace std;

int longestMountain(int *arr, int n) 
{
    int m = 0;
    int l, r;
    for(int i = 1; i < n - 1; i++)
    {
        if(arr[i - 1] < arr[i] and arr[i] > arr[i + 1])
        {
            l = i - 1;
            r = i + 1;
            while(left > 0 and arr[left - 1] < arr[left])
                left --;
            while(right < n - 1 and arr[right] > arr[right + 1])
                right ++;
            m = max(m, right - left + 1);
        }
    }
    if(m>=3) return m;
    return 0;
}

// here the code is to find the highest mountain and it is very interesting code in coding ninjas